pipeline {
    agent any
    
    tools {
        nodejs 'node'
    }

    stages {
        stage('Clone Repository') {
            steps {
                git credentialsId: 'Js-Gallery-repo', url: 'https://github.com/ngaharon/gallery.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'npm --version'
                sh 'npm install'
            }
        }
        stage('Build') {
            steps {
                sh 'node server.js'
            }
        }
    }
}
